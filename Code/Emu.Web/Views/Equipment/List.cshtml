@model IEnumerable<Emu.Common.Equipment>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BarCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WarrantyExpiration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BarCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WarrantyExpiration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id = item.BarCode }) |
            @Html.ActionLink("Details", "Details", new {  id = item.BarCode })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink( "Create New", "Create", new { @class = "btn btn-primary" } )
</p>