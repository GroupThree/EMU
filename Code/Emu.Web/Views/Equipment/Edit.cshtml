        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location)
            @Html.ValidationMessageFor(model => model.Location)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.WarrantyExpiration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.WarrantyExpiration)
            @Html.ValidationMessageFor(model => model.WarrantyExpiration)
