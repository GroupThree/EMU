@model IEnumerable<Emu.Common.NetworkAddress>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NetworkAddressId }) |
            @Html.ActionLink("Details", "Details", new { id=item.NetworkAddressId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NetworkAddressId })
        </td>
    </tr>
}

</table>
